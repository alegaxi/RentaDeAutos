             x:Class="Prueba2.UbicacionPage"
             Title="UbicacionPage">

    <maps:Map x:Name="map" IsShowingUser="true" MapType="Street">
        <x:Arguments>
            <MapSpan>
                <x:Arguments>
                    <sensors:Location>
                        <x:Arguments>
                            <x:Double>25.5730820</x:Double>
